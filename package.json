{
  "name": "greenbro-worker",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev --remote",
    "deploy": "wrangler deploy",
    "frontend:dev": "npm --prefix frontend run dev",
    "frontend:watch": "npm --prefix frontend run dev -- --host 0.0.0.0",
    "frontend:build": "npm --prefix frontend run build",
    "frontend:preview": "npm --prefix frontend run preview",
    "frontend:lint": "npm --prefix frontend run lint",
    "frontend:test": "npm --prefix frontend run test",
    "frontend:test:a11y": "npm --prefix frontend run test:a11y",
    "frontend:test:coverage": "npm --prefix frontend run test:coverage",
    "migrate:apply": "wrangler d1 migrations apply GREENBRO_DB",
    "migrate:apply:local": "wrangler d1 migrations apply GREENBRO_DB --local",
    "migrate:apply:preview": "wrangler d1 migrations apply GREENBRO_DB --env preview",
    "migrate:apply:production": "wrangler d1 migrations apply GREENBRO_DB --env production",
    "migrate:list": "wrangler d1 migrations list GREENBRO_DB",
    "seed:dev": "wrangler d1 execute GREENBRO_DB --local --file ./seeds/dev/seed.sql",
    "deploy:preview": "wrangler deploy --env preview",
    "deploy:production": "wrangler deploy --env production",
    "cron:deploy": "wrangler triggers deploy",
    "cron:deploy:preview": "wrangler triggers deploy --env preview",
    "cron:deploy:production": "wrangler triggers deploy --env production",
    "typecheck": "tsc --noEmit",
    "build": "npm run frontend:build && wrangler deploy --dry-run --outdir ./dist",
    "test": "vitest run src",
    "publish:r2": "node ./scripts/publish-r2-assets.mjs",
    "test:integration": "vitest run tests/integration",
    "test:smoke": "vitest run tests/smoke",
    "test:security": "vitest run tests/security",
    "smoke": "npm run test:smoke",
    "security": "npm run test:security",
    "test:ci": "npm run test && npm run test:integration && npm run test:smoke && npm run test:security"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251014.0",
    "@miniflare/d1": "^2.14.4",
    "better-sqlite3": "^12.4.1",
    "jsdom": "^27.1.0",
    "typescript": "^5.9.3",
    "vitest": "^1.6.0",
    "wrangler": "^4.45.1"
  },
  "dependencies": {
    "itty-router": "^5.0.1",
    "jose": "^5.9.3",
    "zod": "^3.23.8"
  }
}
